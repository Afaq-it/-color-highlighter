<idea-plugin>
  <id>com.mallowigi.colorHighlighter</id>
  <name>Color Highlighter</name>
  <version>@version@</version>
  <category>Appearance</category>
  <vendor email="elior@material-theme.com" url="https://github.com/mallowigi">AtomMaterial</vendor>

  <description><![CDATA[
    This plugin highlights colors in editors in order to make them more stand out.

    This does the same as "Show CSS Color preview as background", only for more languages!

    Supported languages:
    - XML
    - HTML
    - JavaScript
    - TypeScript
    - Properties
    - YAML
    - Python
    - PHP
    - Ruby
    - Scala
    - Java
    - Kotlin
    - Go
    - ObjectiveC
    - Swift

    More to come!
    ]]></description>

  <idea-version since-build="211.*"/>

  <depends>com.intellij.modules.platform</depends>
  <depends>com.intellij.modules.lang</depends>
  <depends optional="true" config-file="withJava.xml">com.intellij.java</depends>
  <depends optional="true" config-file="withYaml.xml">org.jetbrains.plugins.yaml</depends>
  <depends optional="true" config-file="withJson.xml">com.intellij.modules.json</depends>
  <depends optional="true" config-file="withRuby.xml">org.jetbrains.plugins.ruby</depends>
  <depends optional="true" config-file="withProperties.xml">com.intellij.properties</depends>
  <depends optional="true" config-file="withKotlin.xml">org.jetbrains.kotlin</depends>
  <depends optional="true" config-file="withPhp.xml">com.jetbrains.php</depends>
  <depends optional="true" config-file="withScala.xml">org.intellij.scala</depends>
  <depends optional="true" config-file="withPython.xml">com.intellij.modules.python</depends>
  <depends optional="true" config-file="withGo.xml">com.intellij.modules.go-capable</depends>
  <depends optional="true" config-file="withAppCode.xml">com.intellij.modules.c-capable</depends>
  <depends optional="true" config-file="withMarkdown.xml">org.intellij.plugins.markdown</depends>

  <resource-bundle>messages.ColorHighlighterBundle</resource-bundle>

  <extensions defaultExtensionNs="com.intellij">
    <applicationService serviceImplementation="com.mallowigi.FeatureLoader"/>

    <applicationService serviceImplementation="com.mallowigi.colors.PredefinedColors"/>

    <applicationService serviceImplementation="com.mallowigi.config.home.ColorHighlighterConfig"/>
    <applicationConfigurable instance="com.mallowigi.config.home.ColorHighlighterConfigurable"
                             groupId="editor"
                             dynamic="true"
                             id="ColorHighlighterConfig"/>

    <applicationService serviceImplementation="com.mallowigi.config.custom.CustomColorsConfig"/>
    <applicationConfigurable instance="com.mallowigi.config.custom.CustomColorsConfigurable"
                             groupId="editor"
                             dynamic="true"
                             parentId="ColorHighlighterConfig"
                             id="CustomColorsConfig"/>

    <highlightVisitor implementation="com.mallowigi.visitors.AnyVisitor"/>
    <highlightVisitor implementation="com.mallowigi.visitors.TextVisitor"/>

    <codeInsight.lineMarkerProvider language=""
                                    implementationClass="com.mallowigi.gutter.GutterColorLineMarkerProvider"/>
  </extensions>

  <change-notes>
  </change-notes>
</idea-plugin>
